entryPoints:
  traefik:
    address: ":8081"
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: ":443"
    http:
      tls:
        certresolver: "{{ realm }}"
        domains:
          - main: "web.{{ inventory_hostname }}"
            sans:
              - "*.web.{{ inventory_hostname }}"
              - "*.{{ inventory_hostname }}"
              - "{{ inventory_hostname }}"
      middlewares:
        - default@file

api:
  dashboard: true

certificatesResolvers:
  {{ realm }}:
    acme:
      caServer: "https://workstation.{{ realm }}:4431/acme/acme/directory"
      email: "{{ letsencrypt_email_address }}"
      storage: "/etc/acme/acme.json"
      httpChallenge:
        entrypoint: web
      tlsChallenge: {}
      certificatesDuration: 24

log:
  level: INFO

metrics:
  prometheus:
    addEntryPointsLabels: true
    addServicesLabels: true
    entryPoint: traefik

providers:
  docker:
    exposedByDefault: false
  file:
    directory: conf.d
