{{ ansible_managed|comment }}

[Unit]
Description=gluetun
Documentation=https://github.com/qdm12/gluetun
Wants=network-online.target
After=network-online.target
RequiresMountsFor=%t/containers
BindsTo=qbittorrent.service
After=qbittorrent.service
StartLimitIntervalSec=10

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
RestartSec=10
StartLimitBurst=3
# docker.io rate-limit delays can abort startup if timeout is too short.
TimeoutStartSec=300
TimeoutStopSec=70
ExecStartPre=/bin/rm --force %t/%n.pid %t/%n.ctr-id
ExecStartPre=-/usr/bin/podman pull {{ registry_dockerio }}/qmcgaw/gluetun:{{ podman_qbittorrent_gluetun_version }}
ExecStart=/usr/bin/podman run \
  --cap-add "NET_ADMIN" \
  --cgroups "no-conmon" \
  --cidfile "%t/%n.ctr-id" \
  --detach \
  --device "/dev/net/tun:/dev/net/tun" \
  --env "TZ={{ config_system_timezone }}" \
  --env "VPN_SERVICE_PROVIDER=protonvpn" \
  --env "VPN_TYPE=wireguard" \
  --secret "qbittorrent_wireguard_private_key,type=env,target=WIREGUARD_PRIVATE_KEY" \
  --env "SERVER_COUNTRIES=Hungary,Netherlands,Poland" \
  --env "PORT_FORWARD_ONLY=on" \
  --env "VPN_PORT_FORWARDING=on" \
  --env "VPN_PORT_FORWARDING_UP_COMMAND=/bin/sh -c 'wget --output-document=- --post-data \'json={\\\\\\\"listen_port\\\\\\\":{{ '{{' }}PORTS{{ '}}' }}}\' --retry-connrefused --server-response --verbose http://127.0.0.1:8080/api/v2/app/setPreferences 2>&1'" \
  --log-driver "journald" \
  --memory "256m" \
  --name "%n.{{ inventory_hostname }}" \
  --pod-id-file "%t/qbittorrent.pod-id" \
  --pull "never" \
  --replace \
  --rm \
  --sdnotify "conmon" \
  # Image requires root-level access
  #--user "{{ _podman_qbittorrent_user.uid }}:{{ _podman_qbittorrent_groups.results[0].gid }}" \
  qmcgaw/gluetun:{{ podman_qbittorrent_gluetun_version }}

ExecStop=/usr/bin/podman stop --ignore --cidfile "%t/%n.ctr-id" --time 10
ExecStopPost=/usr/bin/podman rm --ignore --force --cidfile "%t/%n.ctr-id"
Type=notify
NotifyAccess=all

[Install]
WantedBy=multi-user.target
