[Unit]
Description=qBittorrent
Documentation=https://www.qbittorrent.org/
Wants=systemd-networkd-wait-online.service
After=nas-mount.service
StartLimitIntervalSec=10

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
StartLimitBurst=3
ExecStartPre=/bin/rm --force %t/container-qbittorrent.pid %t/container-qbittorrent.ctr-id
ExecStartPre=-/usr/bin/podman pull ghcr.io/hotio/qbittorrent:{{ qbittorrent_version }}
ExecStart=/usr/bin/podman run \
    --cidfile %t/container-qbittorrent.ctr-id \
    --conmon-pidfile %t/container-qbittorrent.pid \
    --detach \
    --env "PUID=1001" \
    --env "PGID=1001" \
    --env "UMASK=002" \
    --env "TZ=Europe/Berlin" \
    --env "WEBUI_PORTS=8080/tcp" \
    --hostname qbittorrent \
    --log-driver journald \
    --mount "type=bind,source={{ qbittorrent_basedir }}/config,target=/config" \
    --mount "type=bind,source={{ qbittorrent_mediadir }},target=/data" \
    --name %n \
    --network host \
    --publish "8080:8080/tcp" \
    --replace \
    --rm \
    ghcr.io/hotio/qbittorrent:{{ qbittorrent_version }}

ExecStop=/usr/bin/podman stop --ignore --cidfile %t/container-qbittorrent.ctr-id --time 10
ExecStopPost=/usr/bin/podman rm --ignore --force --cidfile %t/container-qbittorrent.ctr-id
PIDFile=%t/container-qbittorrent.pid
Type=forking

[Install]
WantedBy=multi-user.target default.target
