{{ ansible_managed|comment }}

defaultSemverRangePrefix: ""

enableTelemetry: false

nodeLinker: node-modules

npmRegistries:
{% if auth_token_npmjs is defined %}
  //registry.npmjs.org:
    npmAuthToken: {{ auth_token_npmjs }}
    npmAlwaysAuth: true
{% endif %}
{% if auth_token_github is defined %}
  //npm.pkg.github.com:
    npmAuthToken: {{ auth_token_github }}
    npmAlwaysAuth: true
{% endif %}

supportedArchitectures:
  cpu:
    - x64
  libc:
    - current
    # Some tools specifically request musl :'(
    - musl
  os:
    - linux