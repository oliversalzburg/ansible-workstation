[Unit]
Description=Bazarr
Documentation=https://bazarr.media/
Wants=network-online.target
After=network-online.target nas-mount.service
RequiresMountsFor=%t/containers
BindsTo=bazarr.service
After=bazarr.service
StartLimitIntervalSec=10

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
RestartSec=10
StartLimitBurst=3
ExecStartPre=/bin/rm --force %t/%n.ctr-id
ExecStartPre=-/usr/bin/podman pull ghcr.io/hotio/bazarr:{{ bazarr_version }}
ExecStart=/usr/bin/podman run \
  --cgroups "no-conmon" \
  --cidfile "%t/%n.ctr-id" \
  --detach \
  --env "PUID={{ _user.uid }}" \
  --env "PGID=1001" \
  --env "UMASK=002" \
  --env "TZ={{ config_system_timezone }}" \
  --log-driver "journald" \
  --name "%n.{{ inventory_hostname }}.{{ realm }}" \
  --pod-id-file "%t/bazarr.pod-id" \
  --pull "never" \
  --replace \
  --rm \
  --sdnotify "conmon" \
  hotio/bazarr:{{ bazarr_version }}

ExecStop=/usr/bin/podman stop --ignore --cidfile "%t/%n.ctr-id" --time 10
ExecStopPost=/usr/bin/podman rm --ignore --force --cidfile "%t/%n.ctr-id"
Type=notify
NotifyAccess=all

[Install]
WantedBy=default.target
