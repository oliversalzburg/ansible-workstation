# Global email address for npm
email=oliver.salzburg@gmail.com

# Defaults for new modules
init-author-name="Oliver Salzburg"
init-author-email="oliver.salzburg@gmail.com"
init-license="UNLICENSED"
init-version="0.0.1"

# Disable progress indicator. It only slows down the process.
progress=false

# Save installed packages to package.json with a fixed version.
save-exact=true

# Always use authentication, even for GET requests to the registry.
always-auth=true

