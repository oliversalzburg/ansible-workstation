[Unit]
Description=Mattermost
Documentation=https://docs.mattermost.com/
Wants=network-online.target
After=network-online.target
StartLimitIntervalSec=10

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
RestartSec=10
StartLimitBurst=3
# docker.io rate-limit delays can abort startup if timeout is too short.
TimeoutStartSec=300
TimeoutStopSec=70
ExecStartPre=/bin/rm --force %t/%n.pid %t/%n.ctr-id
ExecStartPre=-/usr/bin/podman pull docker.io/mattermost/mattermost-team-edition:{{ mattermost_version }}
ExecStart=/usr/bin/podman run \
  --cgroups "no-conmon" \
  --cidfile "%t/%n.ctr-id" \
  --conmon-pidfile "%t/%n.pid" \
  --detach \
  --env "MM_SERVICESETTINGS_SITEURL=https://%N.web.{{ inventory_hostname }}" \
  --env "MM_SQLSETTINGS_DRIVERNAME=postgres" \
  --env "MM_SQLSETTINGS_DATASOURCE=postgres://{{ mattermost_pg_user }}:{{ mattermost_pg_password }}@postgres.service.{{ inventory_hostname }}:5432/{{ mattermost_pg_db }}?sslmode=disable&connect_timeout=10" \
  --env "TZ={{ config_system_timezone }}" \
  --hostname "%n.{{ inventory_hostname }}" \
  --label "traefik.enable=true" \
  --label "traefik.http.routers.mattermost.entrypoints=websecure" \
  --label "traefik.http.routers.mattermost.rule=Host(`%N.web.{{ inventory_hostname }}`)" \
  --label "traefik.http.routers.mattermost.tls.certresolver={{ realm }}" \
  --label "traefik.http.routers.mattermost.tls.domains[0].main=%N.web.{{ inventory_hostname }}" \
  --label "traefik.http.services.mattermost.loadbalancer.server.port=8065" \
  --log-driver "journald" \
  --name "%n.{{ inventory_hostname }}" \
  --network "service" \
  --pull "never" \
  --replace \
  --rm \
  --user "{{ _user.uid }}:{{ _groups.results[0].gid }}" \
  --volume "/etc/ssl/certs/ca-certificates.crt:/etc/ssl/certs/ca-certificates.crt:ro" \
  --volume "{{ mattermost_basedir }}/config:/mattermost/config:rw" \
  --volume "{{ mattermost_basedir }}/data:/mattermost/data:rw" \
  --volume "{{ mattermost_basedir }}/logs:/mattermost/logs:rw" \
  --volume "{{ mattermost_basedir }}/plugins:/mattermost/plugins:rw" \
  --volume "{{ mattermost_basedir }}/client/plugins:/mattermost/client/plugins:rw" \
  --volume "{{ mattermost_basedir }}/bleve-indexes:/mattermost/bleve-indexes:rw" \
  mattermost/mattermost-team-edition:{{ mattermost_version }}

ExecStop=/usr/bin/podman stop --ignore --cidfile "%t/%n.ctr-id" --time 10
ExecStopPost=/usr/bin/podman rm --ignore --force --cidfile "%t/%n.ctr-id"
PIDFile=%t/%n.pid
Type=forking

[Install]
WantedBy=multi-user.target
