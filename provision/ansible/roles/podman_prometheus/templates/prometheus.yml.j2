{{ ansible_managed|comment }}

scrape_configs:
  - job_name: node
    scrape_interval: 15s
    static_configs:
      - targets:
        - "{{ inventory_hostname }}:9100"

  - job_name: prometheus
    scrape_interval: 60s
    static_configs:
      - targets:
        - "localhost:9090"

{% if "servicehosts" in group_names %}
  - job_name: cadvisor
    scrape_interval: 15s
    static_configs:
      - targets:
        - "{{ inventory_hostname }}:8080"
{% endif %}

