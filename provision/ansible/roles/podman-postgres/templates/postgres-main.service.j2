[Unit]
Description=PostgreSQL
Documentation=https://www.postgresql.org/docs/
Wants=network.target
After=network.target
RequiresMountsFor=%t/containers
BindsTo=postgres.service
After=postgres.service
StartLimitIntervalSec=10

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
RestartSec=10
StartLimitBurst=3
# docker.io rate-limit delays can abort startup if timeout is too short.
TimeoutStartSec=300
TimeoutStopSec=70
ExecStartPre=/bin/rm --force %t/%n.ctr-id
ExecStartPre=-/usr/bin/podman pull docker.io/library/postgres:{{ postgres_version }}
ExecStart=/usr/bin/podman run \
  --cgroups "no-conmon" \
  --cidfile "%t/%n.ctr-id" \
  --detach \
  --env "POSTGRES_PASSWORD={{ postgres_password }}" \
  --env "POSTGRES_USER={{ postgres_user }}" \
  --log-driver "journald" \
  --name "%n.{{ inventory_hostname }}.{{ realm }}" \
  --pod-id-file "%t/postgres.pod-id" \
  --pull "never" \
  --replace \
  --rm \
  --sdnotify "conmon" \
  postgres:{{ postgres_version }}

ExecStop=/usr/bin/podman stop --ignore --cidfile %t/%n.ctr-id --time 10
ExecStopPost=/usr/bin/podman rm --ignore --force --cidfile %t/%n.ctr-id
Type=notify
NotifyAccess=all

[Install]
WantedBy=default.target
