[Unit]
Description=PostgreSQL
Documentation=https://www.postgresql.org/docs/
Wants=network-online.target
After=network-online.target
RequiresMountsFor=%t/containers
BindsTo=postgres.service
After=postgres.service
StartLimitIntervalSec=10

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
RestartSec=10
StartLimitBurst=3
# docker.io rate-limit delays can abort startup if timeout is too short.
TimeoutStartSec=300
TimeoutStopSec=70
ExecStartPre=/bin/rm --force %t/%n.ctr-id
ExecStartPre=-/usr/bin/podman pull {{ registry_dockerio }}/library/postgres:{{ postgres_version }}
ExecStart=/usr/bin/podman run \
  --cgroups "no-conmon" \
  --cidfile "%t/%n.ctr-id" \
  --detach \
  --secret "postgres_master_password,type=env,target=POSTGRES_PASSWORD" \
  --secret "postgres_master_user,type=env,target=POSTGRES_USER" \
  --log-driver "journald" \
  --memory "2g" \
  --name "%n.{{ inventory_hostname }}" \
  --pod-id-file "%t/postgres.pod-id" \
  --pull "never" \
  --replace \
  --rm \
  --sdnotify "conmon" \
  --user "{{ _user.uid }}:{{ _groups.results[0].gid }}" \
  postgres:{{ postgres_version }}

ExecStop=/usr/bin/podman stop --ignore --cidfile "%t/%n.ctr-id" --time 10
ExecStopPost=/usr/bin/podman rm --ignore --force --cidfile "%t/%n.ctr-id"
Type=notify
NotifyAccess=all

[Install]
WantedBy=multi-user.target
