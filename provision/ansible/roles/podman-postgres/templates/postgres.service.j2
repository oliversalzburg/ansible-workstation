[Unit]
Description=PostgreSQL - The World's Most Advanced Open Source Relational Database
Documentation=https://www.postgresql.org/docs/
After=network.target
StartLimitIntervalSec=10

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
StartLimitBurst=3
ExecStartPre=/bin/rm -f %t/container-postgres.pid %t/container-postgres.ctr-id
ExecStart=/usr/bin/podman run \
    --cgroups no-conmon \
    --cidfile %t/container-postgres.ctr-id \
    --conmon-pidfile %t/container-postgres.pid \
    --detach \
    --env "POSTGRES_PASSWORD={{ postgres_password }}" \
    --env "POSTGRES_USER={{ postgres_user }}" \
    --hostname postgres \
    --log-driver journald \
    --name %n \
    --replace \
    --rm \
    docker.io/library/postgres:{{ postgres_version }}

ExecStop=/usr/bin/podman stop --ignore --cidfile %t/container-postgres.ctr-id --time 10
ExecStopPost=/usr/bin/podman rm --ignore -f --cidfile %t/container-postgres.ctr-id
PIDFile=%t/container-postgres.pid
Type=forking

[Install]
WantedBy=multi-user.target
