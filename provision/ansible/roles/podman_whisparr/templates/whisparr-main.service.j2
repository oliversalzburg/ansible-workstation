{{ ansible_managed|comment }}

[Unit]
Description=Whisparr
Documentation=
Wants=network-online.target
After=network-online.target
RequiresMountsFor=%t/containers
BindsTo=whisparr.service
After=whisparr.service
StartLimitIntervalSec=10

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
RestartSec=10
StartLimitBurst=3
ExecStartPre=/bin/rm --force %t/%n.pid %t/%n.ctr-id
ExecStartPre=-/usr/bin/podman pull {{ registry_ghcrio }}/oliversalzburg/containers/whisparr:{{ podman_whisparr_version }}
ExecStart=/usr/bin/podman run \
  --cgroups "no-conmon" \
  --cidfile "%t/%n.ctr-id" \
  --detach \
  --env "TZ={{ config_system_timezone }}" \
  --log-driver "journald" \
  --memory "4g" \
  --name "%n.{{ inventory_hostname }}" \
  --pod-id-file "%t/whisparr.pod-id" \
  --pull "never" \
  --replace \
  --rm \
  --sdnotify "conmon" \
  --user "{{ _user.uid }}:{{ _groups.results[0].gid }}" \
  oliversalzburg/containers/whisparr:{{ podman_whisparr_version }}

ExecStop=/usr/bin/podman stop --ignore --cidfile "%t/%n.ctr-id" --time 10
ExecStopPost=/usr/bin/podman rm --ignore --force --cidfile "%t/%n.ctr-id"
Type=notify
NotifyAccess=all

[Install]
WantedBy=multi-user.target

