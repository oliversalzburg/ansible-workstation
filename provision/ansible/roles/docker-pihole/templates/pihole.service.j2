[Unit]
Description=Pi-hole
Documentation=https://pi-hole.net/
After=docker.service
Requires=docker.service systemd-networkd-wait-online.service

[Service]
TimeoutStartSec=0
Restart=always
ExecStartPre=-/usr/bin/docker exec %n stop
ExecStartPre=-/usr/bin/docker rm %n
ExecStartPre=/usr/bin/docker pull pihole/pihole:{{ pihole_version }}
ExecStart=/usr/bin/docker run --rm --name %n \
    --dns=127.0.0.1 --dns=1.1.1.1 \
    --hostname pi.hole \
    -e VIRTUAL_HOST="pi.hole" \
    -e PROXY_LOCATION="pi.hole" \
    --volume "{{ pihole_basedir }}/etc/pihole:/etc/pihole" \
    --volume "{{ pihole_basedir }}/etc/dnsmasq.d:/etc/dnsmasq.d" \
#    -e "IPv6=true" \
#    -e "FTLCONF_LOCAL_IPV6={{ ipv6_ula }}" \
    -e "TZ=Europe/Berlin" \
    -e "WEBPASSWORD={{ pihole_webpassword }}" \
    --publish "53:53/tcp" \
    --publish "53:53/udp" \
    --publish "80:80/tcp" \
    pihole/pihole:{{ pihole_version }}

[Install]
WantedBy=default.target
