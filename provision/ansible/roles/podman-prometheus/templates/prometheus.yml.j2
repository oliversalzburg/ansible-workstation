scrape_configs:
  - job_name: arr
    scrape_interval: 15s
    static_configs:
      - targets:
        - "lidarr.service.{{ inventory_hostname }}.{{ realm }}:9707"
        - "prowlarr.service.{{ inventory_hostname }}.{{ realm }}:9707"
        - "radarr.service.{{ inventory_hostname }}.{{ realm }}:9707"
        - "sonarr.service.{{ inventory_hostname }}.{{ realm }}:9707"

  - job_name: cadvisor
    scrape_interval: 15s
    static_configs:
      - targets:
        - "host.containers.internal:8080"

  - job_name: jellyfin
    scrape_interval: 15s
    static_configs:
      - targets:
        - "host.containers.internal:8096"

  - job_name: node
    scrape_interval: 15s
    static_configs:
      - targets:
        - "host.containers.internal:9100"
        - "workstation.{{ realm }}:9100"

  - job_name: postgres
    scrape_interval: 15s
    static_configs:
      - targets:
        - "postgres.service.{{ inventory_hostname }}.{{ realm }}:9187"

  - job_name: prometheus
    scrape_interval: 15s
    static_configs:
      - targets:
        - "localhost:9090"

  - job_name: traefik
    scrape_interval: 15s
    static_configs:
      - targets:
        - "traefik.service.{{ inventory_hostname }}.{{ realm }}:8081"
